{
  "name": "@yourorg/advanced-table",
  "version": "1.0.0",
  "description": "Advanced data table with virtualization, grouping, and Radix UI cell editors",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./themes/*": {
      "import": "./dist/themes/*.mjs",
      "require": "./dist/themes/*.js",
      "types": "./dist/themes/*.d.ts"
    }
  },
  "files": ["dist", "README.md"],
  "scripts": {
    "build": "bun run build.ts",
    "test": "bun test",
    "test:e2e": "playwright test",
    "lint": "biome check .",
    "lint:fix": "biome check . --apply",
    "typecheck": "tsc --noEmit",
    "dev": "bun run components/examples/index.tsx",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check --apply .",
    "prepare": "bun run build && biome check . && biome format --write ."
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-toggle": "^1.0.3",
    "@tanstack/react-table": "^8.11.7",
    "@tanstack/react-virtual": "^3.0.1",
    "clsx": "^2.0.0",
    "tailwind-variants": "^0.1.18"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.1",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "playwright": "^1.40.1",
    "typescript": "^5.3.3",
    "tailwindcss": "^3.3.6"
  },
  "keywords": [
    "react",
    "table",
    "datagrid",
    "virtualization",
    "radix-ui",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourorg/advanced-table.git"
  },
  "license": "MIT"
}
